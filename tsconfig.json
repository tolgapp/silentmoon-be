{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/@types", "bcryptjs"],
  },
  "include": ["src/**/*", "src/express.d.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", ".vercel"]
}
